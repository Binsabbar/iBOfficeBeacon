platform :ios, '9.0'
#use_frameworks!

def myPods    
    # iBeacon API lib
    pod 'EstimoteSDK', '3.8.2'
    
    # to beta testing
    pod 'HockeySDK-Source', '5.0.0'
    
    # google API
    pod 'GTMOAuth2'
    pod 'GoogleAPIClientForREST/Drive'
    pod 'GoogleAPIClientForREST/Calendar'
    pod 'Google/SignIn'

    #pod "SwiftCSV", '~> 0.3.1 //installed manually in the project
end

target 'iBOfficeBeaconTests' do
    myPods
end

target 'iBOfficeBeacon' do
     myPods
end
